<!DOCTYPE html>
<html>
<head>
  <title>Lister</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='nav-wrapper white-text red darken-3'><h2 class='brand-logo center'>Lister</h2></div>
<div class="container">

<% flash.each do |name, msg| %>
   <%= content_tag :div, msg, :id => "flash_#{name}", class:'error' %><br />
<% end %>
<%= yield %>
</div>
</body>
</html>
