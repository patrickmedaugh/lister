<%= form_for(@task, url: edit_task_path) do |f| %>
<%= f.label :title %>
<%= f.text_field :title, value: @task.title %>
<%= f.label :description %>
<%= f.text_area :description, value: @task.description %>
<%= f.label :status %>
<%= f.select(:status) do %>
  <% ['incomplete', 'pending', 'completed'].each do |status| -%>
    <%= content_tag(:option, status, value: status) %>
  <% end %>
<% end %>
<%= f.label :due_date %>
<%= f.date_select :due_date, value: @task.due_date %>
<%= f.submit %>
<% end %>
